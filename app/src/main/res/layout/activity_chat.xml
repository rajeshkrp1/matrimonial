<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/leftarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:id="@+id/searchresuit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/callring"
            android:gravity="center_horizontal"
            android:text="Vaibhavi"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/callring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_notifications_black_24dp" />
    </RelativeLayout>

<RelativeLayout
    android:id="@+id/chatindex1"
    android:layout_below="@+id/topPanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/leftIcon"
    android:layout_width="90dp"
    android:layout_alignParentLeft="true"
    android:layout_height="90dp"

    android:src="@drawable/download"/>
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/leftIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="asdhgjahsfgcdscksahkckascgksakkashcjsachkhakhcsakhkshckashkhkhsakch"/>

    </RelativeLayout>


</RelativeLayout>

    <RelativeLayout
        android:id="@+id/chatindex2"
        android:layout_below="@+id/chatindex1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rightIcon"
            android:layout_width="90dp"
          android:layout_alignParentRight="true"
            android:layout_height="90dp"

            android:src="@drawable/download"/>
        <RelativeLayout
            android:layout_marginLeft="0dp"
            android:layout_toLeftOf="@+id/rightIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asdhgjahsfgcdscksahkckascgksakkashcjsachkhakhcsakhkshckashkhkhsakch"/>

        </RelativeLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:padding="5dp"

        >
        <RelativeLayout
            android:layout_toLeftOf="@+id/enter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_corner_rectangle">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Type Message...."
                android:layout_marginLeft="10dp"
                android:background="@null"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/enter"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/google"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</RelativeLayout>