<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_gravity="bottom"
        android:layout_weight="4"
        android:background="@color/grayline"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="1sp">

        <ImageView
            android:id="@+id/critique_closeImg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1sp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:padding="8sp"
            android:src="@drawable/ringg"
            android:tint="@color/lightGray" />


        <ImageView
            android:id="@+id/criticInfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="1sp"
            android:layout_marginLeft="1sp"
            android:layout_marginTop="1sp"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="8sp"
            android:src="@drawable/coupleg"

            android:tint="@color/lightGray" />

        <ImageView

            android:id="@+id/footor_audio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="1sp"
            android:layout_marginTop="1sp"
            android:layout_weight="1"
            android:src="@drawable/maila"

            android:background="@color/white"
            android:padding="8sp" />

        <ImageView
            android:id="@+id/footer_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="1sp"
            android:layout_marginRight="1sp"
            android:layout_marginTop="1sp"
            android:layout_weight="1"
            android:src="@drawable/chatg"
            android:padding="8sp"
            android:background="@color/white" />

    </LinearLayout>


</LinearLayout>